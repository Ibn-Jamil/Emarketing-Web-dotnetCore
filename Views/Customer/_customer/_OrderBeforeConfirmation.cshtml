@model AngularCoreEmarketing.ViewModels.PlaceOrder
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header d-block">
                <h4 class="modal-title text-center my-1">Order information <i class="fa ml-1 fa-money-bill-alt"></i></h4>
            </div>
            <div class="modal-body form-horizontal">
                @using AngularCoreEmarketing.ViewModels;
                <div class="container">
                    <div class="text-center border-bottom mb-2 pb-2"><b>Seller information:</b>&emsp;&copy;Brand Name: XYZ, Address: H1-Sector ABC Phase-111 XYZ, Phone:123456788, Email:XYZ&reg;Brandmail.com </div>
                    <div class="row py-2 my-2 bg-dark text-light">
                        <div class="offset-4 col-5 text-center">
                            Name
                        </div>
                        <div class="col-3 text-center">
                            Quantity
                        </div>
                    </div>
                    @for (int index = 0; index < Model.Cart.Count; index++)
                    {
                <div ng-if="checkBox_@index==true">
                    <div class="row my-2">
                        <div class="col-4 text-center">
                            <img src="/@Model.Cart[index].Product.ProductImage" class="img-fluid" />
                        </div>
                        <div class="col-5">
                            @Html.DisplayFor(modelItem => @Model.Cart[index].Product.ProductName)
                        </div>

                        <div class="col-3 text-center">
                            {{quantitySelected_@index}}
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6 text-right"><b>Discount:</b></div>
                        <div class="col-6 text-left">@Html.DisplayFor(modelItem => Model.Cart[index].Product.ProductDiscount) %</div>

                        <div class="col-6 text-right"><b>Delivery Charges:</b></div>
                        <div class="col-6 text-left">@Html.DisplayFor(modelItem => Model.Cart[index].Product.DeliveryCharge) $</div>
                    </div>
                    <div class="row">
                        <div class="col-6 text-right"><b>Price:</b></div>
                        <div class="col-6 text-left">
                            <p>Price: {{quantitySelected_@index?quantitySelected_@index:0}} x @Model.Cart[index].Product.ProductPrice = {{quantitySelected_@index?quantitySelected_@index*obj[@index].price:0}}</p>
                            <p>Delivery Charges: {{quantitySelected_@index?quantitySelected_@index:0}} x  @Model.Cart[index].Product.DeliveryCharge = {{quantitySelected_@index?quantitySelected_@index*obj[@index].deliveryCharges:0}}</p>
                            <p class="font-weight-bold text-warning">Total: {{quantitySelected_@index?quantitySelected_@index*(obj[@index].price+obj[@index].deliveryCharges):0}}</p>
                        </div>
                    </div>
                    <div class="row py-1 justify-content-center bg-light">
                        <b>Total Invoice:&emsp;</b>
                        {{totalPrice+totalDeliveryCharges}}
                    </div>
                </div>
                    }
                    <div class="row border-top pt-2 my-3">
                                <div class="col-4 text-right"><b>Customer Address:</b></div>
                                <div class="col-8 text-left" id="address-print">
                                    <br />
                                    <b>Mobile/Phone:</b> <span id="mobile-phone"></span>
                                    <br />
                                    <b> Email:</b> <span id="user-email"></span>
                                </div>
                                <div>
                                </div>
                    </div><br />
                </div>
            </div>
            <div class="modal-footer d-block">
                <div class="row px-3">
                    <div class="col-6 px-0 text-left">
                        <button type="button" class="btn btn-danger" onclick="closeModal()">Cancel</button>
                    </div>
                    <div class="col-6 px-0 text-right">
                        <button type="submit" class="Confirm" onclick="closeModal()">Confirm <i class="fas fa-check-circle ml-1"></i></button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>