@using (Html.BeginForm("FlatSale", "Admin"))
{
    <h3 class="text-center mt-5">Set %Flate Sale on all Products</h3>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-2 my-4 text-right">
                <label class="badge text-right">Flat Sale %</label>
            </div>
            <div class="col-md-7 col-4 my-4">
                <input type="number" class="form-control" placeholder="e.g 15%" id="Percentage" name="Percentage" />
            </div>
            <div class="col-4 col-md-3 my-4">
                <button type="submit" class="btn btn-success">Proceed <i class="fa fa-arrow-circle-right"></i></button>
            </div>
        </div>
    </div>

}
