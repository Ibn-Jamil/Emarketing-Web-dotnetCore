<div id="banner-carousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#banner-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#banner-carousel" data-slide-to="1"></li>
        <li data-target="#banner-carousel" data-slide-to="2"></li>
    </ul>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item active" id="imagePlaceHolder">
            <img src="~/Content/Illusration/banner02.jpg" />
        </div>
        <div class="carousel-item">
            <img src="~/Content/Illusration/Abstract_banner_big_sale_ss.jpg" />
        </div>

        <div class="carousel-item">
            <img src="~/Content/Illusration/Sale_banner_design_ss.jpg" />
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#banner-carousel" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#banner-carousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
<section class="search-sec">
    <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6 p-0 col-margin">
                            <select class="form-control" ng-model="PriceSequence" id="PriceSequence" ng-change="sortByPrice(PriceSequence)">
                                <option value="">Sort by Price</option>
                                <option value="1">Price Low to High</option>
                                <option value="2">Price High to Low</option>
                                <option value="3">Oldest</option>
                                <option value="4">Newest</option>
                            </select>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 p-0 col-margin">
                            <select id="catagorySequence" ng-model="catagorySequence" class="form-control" ng-change="sortByCatagory(catagorySequence)">
                                <option value="" id="sortByCatagoryPlaceHolder">--Sort by Catagory--</option>
                                <option ng-if="catagoryGenre==0" ng-repeat="x in catagorySequenceOpt" value="{{x.id}}">{{x.majorName}}</option>

                                <option ng-if="catagoryGenre==1" value="0">--Back--</option>
                                <option ng-if="catagoryGenre==1" ng-repeat=" c in catagorySequenceOpt" value="{{c.id}}">{{c.majorSubName}}</option>

                                <option ng-if="catagoryGenre==2" value="0">--Go Home--</option>
                                <option ng-if="catagoryGenre==2" ng-repeat="s in catagorySequenceOpt" value="{{s.id}}">{{s.catagoriesName}}</option>
                            </select>
                           
                        </div>


                        <div class="col-lg-3 col-md-3 col-sm-6 p-0 col-margin">
                            <input type="text" id="typeahead" class="typeahead strechWidth" placeholder="Search Products">
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-6 p-0 col-margin">
                            <button type="button" class="wrn-btn" ng-click="searchbyQuery()">Search</button>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</section>