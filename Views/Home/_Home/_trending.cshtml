
<div class="container" ng-if="trendData.length>0">
        <div class="col-12 my-4">
          <h5>Seller recommendations <i class="far fa-hand-point-down triggering text-success"></i></h5>
        </div>
        <div id="trending-carousel" class="carousel slide" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-3" ng-repeat="row in trendData|limitTo:4">
                            <partial name="_Home/_trendingFrame" />
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-3" ng-repeat="row in trendData" ng-if="$index>3">
                            <partial name="_Home/_trendingFrame" />
                        </div>
                    </div>
                </div>
            </div>
    </div>
 

</div>
<div class="row justify-content-center mt-1" ng-if="trendData.length>4">
    <!-- Controls -->
    <div class="carousel-controls">
        <a class="fa fa-fast-backward btn text-dark" href="#trending-carousel" data-slide="prev"></a>
        <a class="fa fa-fast-forward btn text-dark" href="#trending-carousel" data-slide="next"></a>
    </div>
</div>